<div class="container" id="blogs">
  <% flash.each do |key, message| %>
    <% css_class = key == 'notice' ? 'alert-success' : 'alert-danger' %>
    <p class="alert <%= css_class %>"><%= message %></p>
  <% end %>

  <h1>Blogs</h1>

  <%= form_with url: blogs_path, method: :get, local: true do %>
    <div class="input-group mb-3">
      <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search blogs by title or body' %>
      <div class="input-group-append">
        <%= submit_tag 'Search', class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  <% end %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Body</th>
        <th scope="col">User</th>
        <th colspan="2" scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render @blogs %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
