<tr id="<%= dom_id blog %>">
  <th scope="row"><%= blog.id %></th>
  <td><%= blog.title %></td>
  <td><%= blog.body %></td>
  <td><%= blog.user.email %></td>
  
  <% if blog.user == current_user %>
    <td><%= link_to 'Delete', blog_path(blog), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Edit', edit_blog_path(blog), class: 'card-link' %></td>
  <% end %>
    <td><%= link_to 'Show', blog_path(blog), class: 'card-link' %></td>
</tr>
